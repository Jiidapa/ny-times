{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@pages/*": ["./pages/*"],
            "@features/*": ["./features/*"],
            "@components/*": ["./components/*"],
            "@public/*": ["./public/*"],
            "@interfaces/*": ["./interfaces/*"],
            "@services/*": ["./services/*"],
            "@stores/*": ["./stores/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "exclude": ["node_modules", "__tests__"],
    "include": ["**/*.ts", "**/*.tsx"]
}
